{
  "info": {
    "name": "Apq Order",
    "_postman_id": "pastelaria-collection-001",
    "description": "Postman collection for Api Order (Clients, Products, Orders)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Clients",
      "description": "Clients folder",
      "item": [
        {
          "name": "Create Client (valid)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"{{uniqueEmail}}\",\n  \"phone\": \"+55 11 98888-0000\",\n  \"birth_date\": \"1990-01-01\",\n  \"address\": \"Rua A, 100\",\n  \"zip\": \"01234-567\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/clients", "host": ["{{baseUrl}}"], "path": ["clients"] }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// generate unique email",
                  "pm.environment.set('uniqueEmail', 'user+' + Date.now() + '@example.com');"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201', function () { pm.response.to.have.status(201); });",
                  "const json = pm.response.json();",
                  "pm.test('Has id', function () { pm.expect(json).to.have.property('id'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create Client (duplicate email) -> expect 409",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"name\": \"Duplicate\", \"email\": \"duplicate@example.com\" }"
            },
            "url": { "raw": "{{baseUrl}}/clients", "host": ["{{baseUrl}}"], "path": ["clients"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Expect 409 or 422', function () { pm.expect([409,422]).to.include(pm.response.code); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "List Clients (paginated)",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/clients", "host": ["{{baseUrl}}"], "path": ["clients"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const body = pm.response.json();",
                  "pm.test('Has data array', function () { pm.expect(body).to.have.property('data'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Create Product (multipart) - valid",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "name", "value": "Pastel de Carne", "type": "text" },
                { "key": "price", "value": "7.50", "type": "text" },
                { "key": "product_type_id", "value": "1", "type": "text" },
                {
                  "key": "photo",
                  "type": "file",
                  "src": ["./examples/pastel.jpg"]
                }
              ]
            },
            "url": { "raw": "{{baseUrl}}/products", "host": ["{{baseUrl}}"], "path": ["products"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201', function () { pm.response.to.have.status(201); });",
                  "const json = pm.response.json();",
                  "pm.test('Has id and photo_path', function () { pm.expect(json).to.have.property('id'); pm.expect(json).to.have.property('photo_path'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create Product (missing photo) -> expect 422",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{ \"name\": \"NoPhoto\", \"price\": 3.5, \"product_type_id\": 1 }" },
            "url": { "raw": "{{baseUrl}}/products", "host": ["{{baseUrl}}"], "path": ["products"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Expect 422', function () { pm.response.to.have.status(422); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/products", "host": ["{{baseUrl}}"], "path": ["products"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('200', function () { pm.response.to.have.status(200); });",
                  "const body = pm.response.json(); pm.test('Has data', function(){ pm.expect(body).to.have.property('data'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order (valid) - expect 201",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_id\": {{clientId}},\n  \"products\": [\n    { \"product_id\": {{productId1}}, \"quantity\": 2 },\n    { \"product_id\": {{productId2}}, \"quantity\": 1 }\n  ]\n}"
            },
            "url": { "raw": "{{baseUrl}}/orders", "host": ["{{baseUrl}}"], "path": ["orders"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('201', function () { pm.response.to.have.status(201); });",
                  "var json = pm.response.json();",
                  "pm.test('Has id and total', function(){ pm.expect(json).to.have.property('id'); pm.expect(json).to.have.property('products'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create Order (invalid - no products) -> expect 422",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{ \"client_id\": {{clientId}}, \"products\": [] }" },
            "url": { "raw": "{{baseUrl}}/orders", "host": ["{{baseUrl}}"], "path": ["orders"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Expect 422', function () { pm.response.to.have.status(422); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "List Orders",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/orders", "host": ["{{baseUrl}}"], "path": ["orders"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('200', function () { pm.response.to.have.status(200); });",
                  "const body = pm.response.json(); pm.test('Has data for pagination', function(){ pm.expect(body).to.have.property('data'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ],
  "event": [],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000/api/v1" },
    { "key": "clientId", "value": "1" },
    { "key": "productId1", "value": "1" },
    { "key": "productId2", "value": "2" },
    { "key": "authToken", "value": "" }
  ]
}
